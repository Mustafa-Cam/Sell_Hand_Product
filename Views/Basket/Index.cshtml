@model sellhandproduct.Models.Domain.Baskets

<h2>Sepetiniz</h2>

@if (Model != null && Model.Product.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Product)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Sepetiniz boş.</p>
}
